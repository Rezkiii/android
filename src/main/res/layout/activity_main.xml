<?xml version="1.0" encoding="utf-8"?>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFAE0"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/unuse_stroke"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lexend_exa"
                    android:gravity="center"
                    android:text="Pencatatan Keuangan"
                    android:textColor="#779065"
                    android:layout_marginLeft="50dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user"
                android:clickable="true"
                android:onClick="navigateToMainActivity4"
                android:transitionName="layout_transision"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/use_stroke"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lexend_exa"
                    android:gravity="center"
                    android:text="Pemasukan"
                    android:textColor="#779065"
                    android:textSize="14dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/unuse_stroke"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="navigateToMainActivity2"
                android:transitionName="layout_transision">
                >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lexend_exa"
                        android:gravity="center"
                        android:text="Pengeluaran"
                        android:textColor="#779065"
                        android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/box_corner"
            android:orientation="vertical"
            android:elevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/lexend_exa"

                android:text="Total Pemasukan :"
                android:textColor="#779065"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/lexend_exa"

                android:text="Rp 100.000"
                android:textColor="#779065"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:background="@drawable/box_corner"
            android:orientation="vertical"
            android:elevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/lexend_exa"

                android:text="Rp 2.000"
                android:textColor="#779065"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/lexend_exa"

                android:text="Hasil Palak Bocil"
                android:textColor="#779065"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/lexend_exa"

                android:text="28 Agustus 2023"
                android:textColor="#779065"
                android:textSize="15sp" />
         </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:elevation="10dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/button_corner"
            android:clickable="true"
            android:onClick="navigateToMainActivity3"
            android:transitionName="layout_transision">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/lexend_exa"

                android:text="+"
                android:textColor="#779065"
                android:textSize="42sp" />

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>